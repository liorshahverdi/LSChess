		ct = 1;
		model = new Board();
		view = new GUI();
	}
	
	public int getThisTurnsPlayer(){
		if (ct%2 != 0) return 1;
		else return 2;
	}
	
	public static void startGameLoop(){
		
	}
	
	public static void main(String[] args){
